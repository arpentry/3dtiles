    "test:run": "vitest run",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.11",
    "@types/three": "^0.173.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.0",
    "typescript": "~5.7.2",
    "vite": "^6.1.0",
    "vitest": "^3.2.4",
    "wrangler": "4"
  },
  "dependencies": {
    "3d-tiles-renderer": "^0.4.10",
    "cesium": "^1.126.0",
    "three": "^0.177.0"
  }
